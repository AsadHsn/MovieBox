
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="3dp"
    android:paddingRight="3dp"
    android:paddingTop="3dp"
    android:paddingBottom="3dp"
    tools:context="com.example.nid.moviebox.MovieDetailActivityFragment"
    android:orientation="vertical"
    android:gravity="top"
    android:background="#F7F7F7"
    >


<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"

    android:background="#F7F7F7">



    <TextView
        android:text="@string/hello_world1"
        android:id="@+id/movie_title_Highlight"
        android:layout_width="match_parent"
        android:background="#666666"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/abc_action_bar_stacked_max_height"
        style="@style/HeaderStyle"
        android:textStyle="bold"
        android:theme="@style/Base.DialogWindowTitleBackground.AppCompat"
        android:gravity="center_vertical|center_horizontal" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#ffffffff"

        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin">


    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/image_in_detailFragment"
            android:layout_alignParentLeft="true"
            android:scaleType="centerCrop"
            android:src="@drawable/reel_launcher"
            android:layout_gravity="center_vertical"
             />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_gravity="center_vertical"
        android:orientation="vertical"
        android:paddingLeft="15dp"
        android:gravity="center_vertical"
        android:paddingRight="5dp">


         <TextView
        android:text="@string/hello_world2"
        android:id="@+id/movie_release_date"
        android:textSize="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
             android:paddingTop="10dp" />

          <TextView
        android:text="@string/hello_world3"
        android:id="@+id/movie_rating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:paddingTop="10dp" />


        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mark_Favourite"
            android:id="@+id/faourite_button"

         />



        </LinearLayout>

        </LinearLayout>

    <TextView
        android:background="#ffffffff"
        android:id="@+id/description_header"
        android:text="@string/hello_world4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:gravity="top" />

    <TextView
        android:background="#ffffffff"
        android:id="@+id/description_detail"
        android:textSize="12dp"
        android:text="This is fantastic movie about ..."
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="3dp"
        android:gravity="top" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="0.2dp"
        android:background="#7db5b5b5"/>

    <Space
        android:layout_width="1dp"
        android:layout_height="30dp"/>

    <View
        android:layout_width="fill_parent"
        android:layout_height="0.1dp"
        android:background="#7db5b5b5"/>

    <TextView
        android:text="Trailers"
        android:id="@+id/trailer_text"
        android:textSize="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffffff"
        android:minHeight="30dp"
        style="@style/SubHeaderStyle"
        android:textStyle="bold"
        android:theme="@style/Base.DialogWindowTitleBackground.AppCompat"
        android:gravity="left" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="0.1dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="#7db5b5b5"/>

    <HorizontalScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:fillViewport="true"
        android:background="#ffffffff"
        android:scrollbars="horizontal|vertical" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/trailer_images_filler"
            android:orientation="horizontal" >





        </LinearLayout>
    </HorizontalScrollView>
    <View
        android:layout_width="fill_parent"
        android:layout_height="0.2dp"
        android:background="#7db5b5b5"/>

    <Space
        android:layout_width="1dp"
        android:layout_height="30dp"/>

    <View
        android:layout_width="fill_parent"
        android:layout_height="0.2dp"
        android:background="#7db5b5b5"/>

    <TextView
        android:elevation="8dp"
        android:textSize="16dp"
        android:text="Reviews"
        android:id="@+id/reviews_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="30dp"
        android:background="#ffffffff"
        android:theme="@style/Base.DialogWindowTitleBackground.AppCompat"
        style="@style/SubHeaderStyle"

        android:gravity="left"
        android:textStyle="bold"
        />

    <View
        android:layout_width="fill_parent"
        android:layout_height="0.1dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="#7db5b5b5"/>


    <TextView
        android:background="#ffffffff"
        android:id="@+id/description_Review"
        android:textSize="12dp"
        android:text="This is the best movie I have ever watched in my life ..."
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:minHeight="50dp"
        android:paddingRight="10dp"
        android:paddingLeft="10dp"
        android:gravity="center_horizontal|center_vertical"/>

    <TextView
        android:text="by"
        android:id="@+id/atuhor_review"
        android:textSize="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffffff"
        android:minHeight="18dp"
        android:gravity="right|center_vertical"

        />

    <View
        android:layout_width="fill_parent"
        android:layout_height="0.1dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="#7db5b5b5"/>

    <TextView
        android:text=">>"
        android:id="@+id/allreviews"
        android:textSize="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffffff"
        android:minHeight="18dp"
        android:gravity="right|center_vertical"

         />



    <View
        android:layout_width="fill_parent"
        android:layout_height="0.1dp"
        android:background="#7db5b5b5"/>


    <View
        android:layout_width="fill_parent"
        android:layout_height="20dp"

        android:background="#F7F7F7"/>



</LinearLayout>

</ScrollView>

